---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section>
  <h2>{title}</h2>
  <ul>
    <slot />
  </ul>
</section>
<style>
  section {
    padding: 4px 20px;
  }

  h2{
    margin: 0;
    font-size: 20px;
    font-weight: var(--font-weight);
    line-height: 32px;
  }

  ul{
    margin: 0;
    padding: 4px 8px;
    list-style-type: none;
  }
</style>
